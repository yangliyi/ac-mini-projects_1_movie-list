<%= form_for @movie, :url => movie_path(@movie) do |f| %>
    <%= f.label :name, "Movie" %>
    <%= f.text_field :name %>

    <%= f.label :category, "Category" %>
    <%= f.text_field :category %>

    <%= f.label :rating, "Rating" %>
    <%= f.text_field :rating %>

    <%= f.label :description, "Description" %>
    <%= f.text_area :description %>

    <%= f.submit "Update" %>

<% end %>