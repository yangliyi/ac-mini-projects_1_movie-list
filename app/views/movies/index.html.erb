<h1>Movie List</h1>

<table class="table">
  <tr>
    <th>Movie</th>
    <th>Category</th>
    <th>Rating</th>
    <th>Action</th>
  </tr>
<% @movies.each do |movie| %>

  <tr>
    <td>
    <%= movie.name %>
    </td>
    <td>
    <%= movie.category %>
    </td>
    <td>
    <%= movie.rating %>
    </td>
    <td>
    <%= link_to "Detail", movie_path(movie), :class => "btn btn-info" %>

    <%= link_to "Edit", movies_path(:movie_id => movie), :class => "btn btn-info" %>

    <%= link_to "Delete", movie_path(movie), :method => :delete, :class => "btn btn-danger" %>

    </td>
  </tr>
<% end %>

</table>
<div>
  <%= paginate @movies %>
</div>
<div>
  <%= link_to 'Add New Movie', new_movie_path, :class => "btn btn-primary" %>
</div>

<% if @movie %>
  <%= form_for @movie, :url => movie_path(@movie), :method => :patch  do |f| %>

  <%= render :partial => "form", :locals => { :f => f } %>

  <%= f.submit "Update", :class => "btn btn-primary" %>

  <% end %>
<% end %>
